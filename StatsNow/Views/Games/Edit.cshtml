@model StatsNow.Models.Game

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameId" />
            <div class="form-group">
                <label asp-for="Home" class="control-label"></label>
                <input asp-for="Home" class="form-control" />
                <span asp-validation-for="Home" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Away" class="control-label"></label>
                <input asp-for="Away" class="form-control" />
                <span asp-validation-for="Away" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue" class="control-label"></label>
                <input asp-for="Venue" class="form-control" />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeScore" class="control-label"></label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayScore" class="control-label"></label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsGamesOfTheSeason" /> @Html.DisplayNameFor(model => model.IsGamesOfTheSeason)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Win" class="control-label"></label>
                <input asp-for="Win" class="form-control" />
                <span asp-validation-for="Win" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FG" class="control-label"></label>
                <input asp-for="FG" class="form-control" />
                <span asp-validation-for="FG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FGA" class="control-label"></label>
                <input asp-for="FGA" class="form-control" />
                <span asp-validation-for="FGA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FGperC" class="control-label"></label>
                <input asp-for="FGperC" class="form-control" />
                <span asp-validation-for="FGperC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

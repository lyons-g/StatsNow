<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <link href="~/Content/site.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>

<body>
    <div class="jumbotron">
        <h1>Stats.Now</h1>
    </div>


    <nav class="navbar navbar-expand-lg navbar-light ">
        <a class="navbar-brand" href="#">Stats.Now</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav">
                <li> <a asp-controller="Home" asp-action="Index">Home </a></li>
                <li><a asp-controller="Game" asp-action="List">Games </a></li>
                <li><a asp-controller="Games" asp-action="Create">NEW</a></li>
                <li>  <a asp-controller="Games" asp-action="Dashboard">Dashboard</a></li>
            </ul>
        </div>
    </nav>

    @RenderBody()
    @RenderSection("Scripts", required: false)



</body>
</html>



